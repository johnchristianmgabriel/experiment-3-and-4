#include<iostream>

using namespace std;
int main()
{
	int arr[50], size, temp; 
	char i, j;
	cout<<"Hello User, Thank You for Choosing This Program."<<endl;
	cout<<""<<endl;
	cout<<""<<endl;
	cout<<"Please Enter The Size of your desired array  : "<<endl;
	cin>>size;
	cout<<""<<endl;
	cout<<""<<endl;
	cout<<"Please Enter The elements of your array : "<<endl;
	for(i=0; i<size; i++)
	{
		cin>>arr[i];
	}
	j=i-1;  
	i=0;   
	while(i<j)
	{
		temp=arr[i];
		arr[i]=arr[j];
		arr[j]=temp;
		i++;
		j--;
	}
	cout<<""<<endl;
	cout<<""<<endl;
	cout<<"Now the Reverse of the Array is : "<<endl;
	cout<<""<<endl;
	cout<<""<<endl;
	for(i=0; i<size; i++)
	{
		cout<<arr[i]<<" ";
	}
	
cout<<"                                                                     _"<<endl;
cout<<"                                                                    | ) "<<endl;
cout<<"                                                                   /  |___"<<endl;
cout<<"                                                            ______/     _ _>"<<endl;
cout<<"Thank You For Using This Program For Your Needs            |            _ _>"<<endl;
cout<<"                                                           |_______    _ _>"<<endl;
cout<<"                                                                   \_____> "<<endl;
	
}
